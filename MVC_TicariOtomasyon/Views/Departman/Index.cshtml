@using MVC_TicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <td>ID</td>
        <td>Departman Adı</td>
        <td>Sil</td>
        <td>Güncelle</td>
        <td>Detaylar</td>
    </tr>
    @foreach (var k in Model)
    {

<tr>
    <td>
        @k.DepartmanID
    </td>
    <td>
        @k.DepartmanAd
    </td>
    <td><a href="/Departman/DepartmanSil/@k.DepartmanID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Departman/DepartmanGetir/@k.DepartmanID" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Departman/DepartmanDetay/@k.DepartmanID" class="btn btn-group" style="background-color:lightcoral;color:white">Detaylar</a></td>


</tr>
    }
</table>
<a href="/Departman/DepartmanEkle/" class="btn btn-info">Departman Ekle</a>



